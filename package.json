{
  "name": "bvcp",
  "version": "0.0.1",
  "private": true,
  "description": "Binary Version Control Platform - バイナリファイル向けバージョン管理プラットフォーム",
  "author": "Yorikawa Aise",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/packed7Ice/bvcp.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo 'Run specific app: npm run dev --workspace=apps/web'",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "echo 'Husky hooks ready'"
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
